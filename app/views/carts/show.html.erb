<% @line_items.each do |line_item|%>
   <% food = line_item.food %>
   <div>
     <p><% food.title %></p>
     <p><% line_item.quantity %>品</p>
        <%= number_to_currency line_item.total_price, precision: 0, unit: "", format: "%u %n" %>
        <span>円(税込み)</span>
     </p>
   </div>
<% end %>

<div>
  <p>合計　<%= @cart.total_number %><span>品</span></p>
  <p>
    <%= number_to_currency @cart.total_price, precision: 0, unit: "", format: "%u %n" %>
    <span>円(税込み)</span>
  </p>
</div>

<% if @line_items.count == 0 %>
  カートには何も入っていません。
<% else %>
  <%= link_to '購入画面へ進む', "#" %>
  <%= link_to 'カートを空にする', @cart, method: :delete, data: { confirm: 'カートの中身をすべて削除してもいいですか？' } %>
<% end %>